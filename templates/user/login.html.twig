{% extends 'base.html.twig' %}
{% block title %}Se connecter{% endblock %}
{% block stylesheets %}
  <link href="/css/login.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="text-center">
    <form class="form-signin">
      <img class="mb-4" src="/img/panda_roux.jpg" alt="" width="100" height="100">
      <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
      <label for="inputEmail" class="sr-only">Adresse email</label>
      <input type="email" name="_username" id="inputEmail" class="form-control" placeholder="adresse email" required autofocus>
      <label for="inputPassword" class="sr-only">Mot de passe</label>
      <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
    </form>
  </div>
{% endblock %}
