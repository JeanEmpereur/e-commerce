{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom du produit</th>
                <th>Prix</th>
                <th>Quantite</th>
                <th>Date d'ajout</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
                <td>{{ panier.produit.nom }}</td>
                <td>{{ panier.produit.prix }}</td>
                <td>{{ panier.quantite }}</td>
                <td>{{ panier.date }}</td>
                <td>
                    <a class="btn btn-danger" href="{{ path('deletePanier', {'id': panier.panier.id, 'contenupanier': panier.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('deleteAllPanier', {'id': p.id}) }}" class="btn btn-danger">Tout supprimer</a>
{% endblock %}
