{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
{% if success != null %}
<div class="alert alert-success mb-3" id="success">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <div class="text-center">
    <p><strong>Succ√®s ! </strong></p>
    <p>{{ success }}</p>
  </div>
</div>
{% endif %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <h1>Produit index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.stock }}</td>
                <td>
                    <a href="{{ path('showproduit', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('editproduit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('addproduit') }}">Create new</a>
{% endblock %}
