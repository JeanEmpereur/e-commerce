{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
{% if success != null %}
<div class="alert alert-success mb-3" id="success">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <div class="text-center">
    <p><strong>Succ√®s ! </strong></p>
    <p>{{ success }}</p>
  </div>
</div>
{% endif %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <h1>Produit index</h1>
    <a class="btn btn-lg btn-block btn-success" href="{{ path('addProduit') }}">Create new</a>
    <div class="card-deck mb-3 text-center">
      {% for produit in produits %}
      <div class="card mb-4 box-shadow">
        <div class="card-header">
          <h4 class="my-0 font-weight-normal">{{ produit.nom }}</h4>
        </div>
        <div class="card-body">
          <h1 class="card-title pricing-card-title">photo</h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li>${{ produit.prix }}</li>
            <li>{{ produit.description }}</li>
            <li>Stock restant : {{ produit.stock }}</li>
          </ul>
          <a class="btn btn-lg btn-block btn-primary" href="{{ path('showProduit', {'id': produit.id}) }}">Voir plus</a>
        </div>
      </div>
      {% else %}
      <p>no records found</p>
      {% endfor %}
    </div>
{% endblock %}
